const gaId = import.meta.env.PUBLIC_GA_ID;
---

<!-- Google tag (gtag.js) -->
<script is:inline>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());
  gtag('config', '${gaId}');
</script>
<script async src="https://www.googletagmanager.com/gtag/js?id=${gaId}"></script>