        <!-- Uluslararası Destek Programları -->
        <div class="accordion-item">
          <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#uluslararasiDestekler">
              <i class="bi bi-globe text-success me-2"></i>
              <strong>Uluslararası Destek Programları</strong>
            </button>
          </h2>
          <div id="uluslararasiDestekler" class="accordion-collapse collapse" data-bs-parent="#tubitakAccordion">
            <div class="accordion-body">
              <div class="row">
                <div class="col-md-6">
                  <div class="d-flex align-items-start mb-3">
                    <i class="bi bi-star-fill text-warning me-2 mt-1"></i>
                    <div>
                      <h6 class="text-dark mb-1">1071 - Uluslararası Araştırma Fonlarından Yararlanma Kapasitesinin ve Uluslararası Ar-Ge İşbirliklerine Katılımın Arttırılmasına Yönelik Destek Programı</h6>
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="d-flex align-items-start mb-3">
                    <i class="bi bi-star-fill text-warning me-2 mt-1"></i>
                    <div>
                      <h6 class="text-dark mb-1">Ufuk Avrupa Programı</h6>
                      <small class="text-muted">Avrupa Birliği araştırma ve inovasyon programı</small>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Sanayi Destekleri -->
        <div class="accordion-item">
          <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sanayiDestekleri">
