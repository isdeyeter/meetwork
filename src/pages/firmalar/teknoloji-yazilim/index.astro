---
import BaseLayout from '../../../layouts/BaseLayout.astro';

// Firma verileri
const companies = [
  {
    title: 'İş de Yeter (isdeyeter.com)',
    description: 'Teknoloji, çözüm ve güvenilirlik — işinizi geleceğe taşıyın.',
    slug: 'is-de-yeter',
    sector: 'teknoloji-yazilim',
    location: 'Üsküdar / İstanbul',
  },
  {
    title: 'E-Mutabakat Çözümleri (Mutabakat.com)',
    description: 'E-Mutabakat, Alacak Yönetimi ve Finansal Süreç Çözümleri',
    slug: 'mutabakat',
    sector: 'teknoloji-yazilim',
    location: 'Ataşehir / İstanbul',
  }
];

// URL parametrelerini al
const url = new URL(Astro.request.url);
const searchParams = url.searchParams;
const searchQuery = searchParams.get('q') || '';
const locationQuery = searchParams.get('location') || '';

// Filtreleme işlemi
let filteredCompanies = companies;

if (searchQuery) {
  filteredCompanies = filteredCompanies.filter(company => 
    company.title.toLowerCase().includes(searchQuery.toLowerCase()) ||
    company.description.toLowerCase().includes(searchQuery.toLowerCase())
  );
}

if (locationQuery) {
  filteredCompanies = filteredCompanies.filter(company => 
    company.location.toLowerCase().includes(locationQuery.toLowerCase())
  );
}
---

<BaseLayout title="Teknoloji & Yazılım Firmaları">
  <main class="container py-5">
    <!-- Başlık -->
    <div class="text-center mb-5">
      <h1 class="display-5 fw-bold text-warning mb-3">Teknoloji & Yazılım Firmaları</h1>
      <p class="lead text-muted">
        Teknoloji ve yazılım sektöründeki firmaları keşfedin. Yeni iş ortaklıkları ve çözümler bulun.
      </p>
    </div>

    <!-- Arama Formu -->
    <div class="card shadow-sm mb-5">
      <div class="card-body">
        <form method="GET" class="row g-3 align-items-end">
          <div class="col-md-6">
            <label for="q" class="form-label fw-semibold">Firma Adı veya Açıklama</label>
            <input 
              type="text" 
              class="form-control" 
              id="q" 
              name="q" 
              placeholder="Örn: firma adı, yazılım, teknoloji..."
              value={searchQuery}
            >
          </div>
          <div class="col-md-4">
            <label for="location" class="form-label fw-semibold">Konum</label>
            <input 
              type="text" 
              class="form-control" 
              id="location" 
              name="location" 
              placeholder="Örn: İstanbul, Üsküdar..."
              value={locationQuery}
            >
          </div>
          <div class="col-md-2">
            <button type="submit" class="btn btn-warning w-100">
              <i class="bi bi-search me-2"></i>Ara
            </button>
          </div>
        </form>
        
        <!-- Filtre Temizleme -->
        {(searchQuery || locationQuery) && (
          <div class="mt-3">
            <a href="/firmalar/teknoloji-yazilim/" class="btn btn-outline-secondary btn-sm">
              <i class="bi bi-x-circle me-1"></i>Filtreleri Temizle
            </a>
            <small class="text-muted ms-2">
              {filteredCompanies.length} firma bulundu
            </small>
          </div>
        )}
      </div>
    </div>

    <!-- Firma Listesi -->
    <div class="row g-4">
      {filteredCompanies.length > 0 ? (
        filteredCompanies.map(company => (
          <div class="col-lg-6">
            <div class="card company-card h-100">
              <div class="card-body p-4">
                <!-- Firma Bilgileri - Tıklanabilir alan -->
                <a 
                  href={`/firmalar/${company.sector}/${company.slug}/`}
                  class="text-decoration-none text-dark d-block"
                >
                  <div class="d-flex align-items-start gap-3">
                    <!-- Firma İkonu -->
                    <div class="flex-shrink-0">
                      <div class="company-icon-small">
                        {company.slug === 'mutabakat' ? (
                          <i class="bi bi-file-earmark-check text-success fs-4"></i>
                        ) : (
                          <i class="bi bi-building text-warning fs-4"></i>
                        )}
                      </div>
                    </div>
                    
                    <!-- Firma Bilgileri -->
                    <div class="flex-grow-1">
                      <h3 class="h5 fw-bold mb-2 text-dark hover-text-primary">
                        {company.title}
                        
                      </h3>
                      <p class="text-muted mb-2">{company.description}</p>
                      <div class="d-flex flex-wrap gap-2 align-items-center">
                        <span class="badge bg-light text-dark border">
                          <i class="bi bi-geo-alt me-1"></i>{company.location}
                        </span>
                        <span class="badge bg-warning text-dark">
                          <i class="bi bi-tags me-1"></i>{company.sector.replace('-', ' ')}
                        </span>
                        {company.slug === 'mutabakat' && (
                          <span class="badge bg-info text-dark">
                            <i class="bi bi-lightning me-1"></i>E-Mutabakat
                          </span>
                        )}
                        
                      </div>
                      
                       </div>
                  </div>
                  
                  <!-- Tıklama İpucu -->
                  <div class="mt-3 pt-3 border-top text-center">
                    <small class="text-muted">
                      <i class="bi bi-arrow-right me-1"></i>
                      {company.slug === 'mutabakat' 
                        ? 'E-Mutabakat çözümlerini görüntülemek için tıklayın'
                        : 'İş de Yeter Ustalar-Hizmetler sistemini görüntülemek için tıklayın'
                      }
                    </small>
                  </div>
                </a>
              </div>
            </div>
          </div>
        ))
      ) : (
        <!-- Sonuç Bulunamadı -->
        <div class="col-12">
          <div class="text-center py-5">
            <i class="bi bi-search display-1 text-muted"></i>
            <h3 class="h4 text-muted mt-3">Firma bulunamadı</h3>
            <p class="text-muted">
              Arama kriterlerinize uygun firma bulunamadı. 
              <a href="/firmalar/teknoloji-yazilim/" class="text-warning text-decoration-none">
                Tüm firmaları görüntülemek için tıklayın.
              </a>
            </p>
          </div>
        </div>
      )}
    </div>

    

    <!-- Bilgilendirme -->
    <div class="mt-5 pt-4 border-top">
      <div class="row">
        <div class="col-md-8">
          <h4 class="h5 mb-3">Firmanızı Listeye Ekleyin</h4>
          <p class="text-muted mb-0">
            MeetWork ekosisteminde yer alarak binlerce potansiyel iş ortağına ulaşın. 
            PRO üyelik avantajlarından yararlanın.
          </p>
        </div>
        <div class="col-md-4 text-md-end">
          <a href="https://panel.meetwork.net/register" class="btn btn-warning">
            <i class="bi bi-star-fill me-2"></i>PRO Üye Ol
          </a>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<style is:scoped>
  .company-card {
    border: none;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .company-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    border: 1px solid #fd7e14;
  }

  /* MUTABAKAT kartına özel hover efekti */
  .company-card:hover[data-mutabakat] {
    border-color: #198754 !important;
  }

  .company-icon-small {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hover-text-primary:hover h3 {
    color: #fd7e14 !important;
  }

  /* MUTABAKAT için özel ikon arkaplanı */
  .company-icon-small .bi-file-earmark-check {
    color: #198754;
  }

  /* Responsive tasarım */
  @media (max-width: 768px) {
    .display-5 {
      font-size: 2rem;
    }
    
    .company-icon-small {
      width: 50px;
      height: 50px;
    }
    
    .company-icon-small i {
      font-size: 1.2rem !important;
    }
    
    .btn-lg {
      padding: 0.5rem 1rem;
      font-size: 1rem;
    }
  }
</style>

<script>
  // Kartlara data attribute ekleme
  document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.company-card').forEach(card => {
      const link = card.querySelector('a');
      if (link && link.href.includes('mutabakat')) {
        card.setAttribute('data-mutabakat', 'true');
      }
    });
  });
</script>