---
import Navbar from '../components/layout/Navbar.astro';
import Footer from '../components/layout/Footer.astro';
import '../styles/global.scss';

// BU SATIR Analytics kodunu localde göstermemek için!
const isProduction = import.meta.env.PROD;

export interface Props {
  title: string;
  description?: string;
}

const { title, description = 'MeetWork ile iş dünyasında yeni bağlantılar kurun, sektörler arası iş birliklerini keşfedin.' } = Astro.props;
---

<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <!-- ... diğer meta tag'ler -->

  <!-- Google Tag Manager -->
  <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
  new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
  j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
  'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
  })(window,document,'script','dataLayer','GTM-NTZGM3S4');</script>
  <!-- End Google Tag Manager -->

  <!-- DÜZELTİLMİŞ FAVICON YOLLARI -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="icon" type="image/png" href="/images/favicon.png">
  <link rel="shortcut icon" href="/images/favicon.png">
  <link rel="apple-touch-icon" href="/images/favicon.png">

  <title>{title}</title>

  {/* SADECE PRODUCTION'DA ANALYTICS */}
  {isProduction && (
    <>
      <!-- Google Analytics -->
      <script is:inline>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'G-9JZMLCVBJN');
      </script>
      <script async src="https://www.googletagmanager.com/gtag/js?id=G-9JZMLCVBJN"></script>
    </>
  )}
</head>
<body>

  <!-- Google Tag Manager (noscript) -->
  <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NTZGM3S4"
  height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
  <!-- End Google Tag Manager (noscript) -->
   
  <Navbar />
  <main class="container py-4">
    <slot />
  </main>
  <Footer />
  
  <script>
    import('bootstrap/dist/js/bootstrap.bundle.min.js');
  </script>
</body>
</html>